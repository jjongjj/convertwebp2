{
  "name": "convertwemp",
  "version": "1.0.0",
  "description": "고품질 GIF to WebP 변환기 - Sharp 기반 고성능 이미지 변환 도구",
  "main": "src/cli.js",
  "type": "module",
  "engines": {
    "node": ">=18.17.0"
  },
  "bin": {
    "convertwemp": "./src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "gui": "electron gui/main.cjs",
    "gui-dev": "NODE_ENV=development electron gui/main.cjs",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "dist": "npm run build",
    "test": "node test/test.js",
    "benchmark": "node test/benchmark.js"
  },
  "keywords": [
    "gif",
    "webp",
    "image-conversion",
    "sharp",
    "animation",
    "compression"
  ],
  "author": "ConvertWemp Team",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "ora": "^8.0.1",
    "p-map": "^7.0.2",
    "progress": "^2.0.3",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/convertwemp.git"
  },
  "bugs": {
    "url": "https://github.com/username/convertwemp/issues"
  },
  "homepage": "https://github.com/username/convertwemp#readme",
  "main": "gui/main.cjs",
  "build": {
    "appId": "com.convertwemp.app",
    "productName": "ConvertWemp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "gui/**/*",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    }
  }
}
